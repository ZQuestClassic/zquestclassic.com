{% extends "layouts/base.njk" %}

{% block header %}
	<style>
		.hero {
			position: relative;
			z-index: 1;
			background-color: black;
			overflow: hidden;
			display: grid;
		}
		.hero .background-image-wrapper {
			display: grid;
			place-items: center;
			width: 100vw;
		}
		.hero .background-image {
			max-height: 90vh;
			max-width: calc(max(90vw, 500px));
			width: 100%;
			/* margin-top: 7vh; */
			aspect-ratio: 3384/2240;
			/* position: absolute; */
			/* opacity: 0.6; */
			background-position: center;
			background-repeat: no-repeat;
			background-blend-mode: darken;
			background-size: cover;
			background-color: var(--transparent-cover);
			will-change: transform;
		}
		.hero .credits {
			background: var(--hero-text-background-color);
			padding: 10px;
			text-align: center;
		}

		.hero-overlay {
			position: absolute;
			top: 0;
			left: 0;
			width: 100vw;
			height: 100vh;
			display: grid;
			place-content: center;
		}
		.download-option {
			padding: 10px;
			font-size: 2em;
		}

		.features {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			text-align: center;
		}
		.feature {
			display: grid;
			place-items: center;
			padding: 10px;
			margin: 10px;
		}
		.feature .label {
			font-size: 2em;
		}
		.feature .image {
			width: 75px;
			/* height: 50%; */
		}

		.feature--music img {
			/* width: 75px; */
			/* height: 50%; */
			margin-top: 25px;
			margin-bottom: 15px;
		}
		.feature--music img:nth-child(2) {
			position: relative;
			top: -15px;
		}
		.feature--music img:nth-child(3) {
			position: relative;
			top: 10px;
		}
	</style>

	<div class="hero">
		{# <div class="download-overlay">
			<div class="download-option">
				Download Stable
			</div>

			<div class="download-option">
				Download Nightly
			</div>
		</div> #}

		<div class="background-image-wrapper">
			<video class="background-image" loop autoplay muted>
				<source src="/assets/zquest.webm" type="video/webm">
				<source src="/assets/zquest.mp4" type="video/mp4">
			</video>
		</div>

		{# <div class="hero-overlay">
			Make 
		</div> #}

		<div class="credits"><a target="_blank" href="https://www.purezc.net/index.php?page=tilesets&id=106">Cambria Tileset - by Matthew</a></div>
	</div>

	<style>
		.title {
			font-size: 5em;
		}
		.section-title {
			font-size: 2em;
			padding: 20px 0;
		}
		.section {
			margin: 0 10vw;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		div {
			font-family: 8font;
		}
	</style>
{% endblock %}

